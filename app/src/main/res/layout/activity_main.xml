<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/many_clocks_wall_mean_time_important_45368047">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="314dp"
        android:layout_height="241dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/clcok_removebg_preview" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_timepicker"
        android:layout_gravity="center"
        android:background="@color/ic_launcher_background"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:text="No Alarm Set"
        android:textSize="32sp"
        android:textStyle="bold"
        app:drawableTopCompat="@android:drawable/presence_away"
        />

    <Button
        android:id="@+id/button_timepicker"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#9C1ECA"
        android:text="set alarm"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_change"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#E43232"
        android:padding="12dp"
        android:text="Coding Quiz"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        />

</LinearLayout>

